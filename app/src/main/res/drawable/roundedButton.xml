<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#377aad" />
            <gradient android:angle="-90" android:startColor="#344699" android:endColor="#377aad"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#355ca3" />
            <solid android:color="#345da6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#377aad" />
            <gradient android:angle="-90" android:startColor="#387aad" android:endColor="#344699" />
        </shape>
    </item>
</selector>