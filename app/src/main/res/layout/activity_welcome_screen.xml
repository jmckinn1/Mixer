<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mixr.mixr.WelcomeScreen"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="358dp"
        android:layout_height="160dp"
        app:srcCompat="@mipmap/mixer"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Mixer"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover new and intersting meals."
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to start swiping!"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="248dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:padding="10dp"
        android:textColor="@color/colorButtonText"
        android:background="@drawable/roundedButton"
        android:text="Login With Mixer"
        tools:layout_editor_absoluteY="438dp"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="489dp" />


</android.support.constraint.ConstraintLayout>
